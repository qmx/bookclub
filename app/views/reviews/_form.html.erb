<% form_for @review do |f| %>
  <%= f.error_messages %>
  <p>
    <%=h @review.book.title %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :book_id %>
  </p>
  <p>
    <%= f.label :review %><br />
    <%= f.text_area :review %>
  </p>
  <p>
    <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
